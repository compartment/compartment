<h1>Listing pages</h1>

<table>
  <tr>
    <th>Site</th>
    <th>Url path</th>
    <th>Title</th>
    <th>Layout</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.site %></td>
    <td><%= page.url_path %></td>
    <td><%= page.title %></td>
    <td><%= page.layout %></td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
    <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

