<!DOCTYPE html>
<html>
<head>
  <title>Compartment</title>
  <%= stylesheet_link_tag 'compartment/admin-styles' %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">

  <header>
    <div class="pull-right">
      <%= link_to 'My Account', admin_account_path %> | <%= link_to 'Sign Out', admin_logout_path %>
    </div>

    <!-- TODO: make this dynamic -->
    <ul class="nav nav-tabs">
      <li class="<%= 'active' if params[:controller] == 'compartment/admin/dashboard' %>">
        <%= link_to 'Dashboard', admin_dashboard_path %>
      </li>
      <li class="<%= 'active' if params[:controller] == 'compartment/admin/pages' %>">
        <%= link_to 'Pages', admin_pages_path %>
      </li>
      <li class="<%= 'active' if params[:controller] == 'compartment/admin/users' %>">
        <%= link_to 'Users', admin_users_path %>
      </li>
      <li class="<%= 'active' if params[:controller] == 'compartment/admin/settings' %>">
        <%= link_to 'Settings', admin_settings_path %>
      </li>
    </ul>
  </header>

  <div class="body">
    <%= yield %>
  </div>

</div>

</body>
</html>
